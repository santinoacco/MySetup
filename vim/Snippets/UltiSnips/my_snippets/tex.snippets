# Environments
#  -- Figures
snippet _fig
\\begin{figure}[h!]
	\\centering
	\\includegraphics[width = ${2:{VISUAL}}\textwidth]{${1:{path to image}}}
	\\caption{%
		\\textit{%
			${4}
			}
		}
	\\label{fig:${3}}
\\end{figure}
${4}
endsnippet
snippet _twofig
\\begin{figure}[h!]
	\\centering
	\\begin{subfigure}[b]{${2:{VISUAL}}\textwidth}
		\\centering
		\\includegraphics[width=\textwidth]{${1:{path to image}}}
		\\caption{~}
		\\label{subfig:${3}}
	\\end{subfigure}
	\\hfill
	\\begin{subfigure}[b]{$2\textwidth}
		\\centering
		\\includegraphics[width=\textwidth]{${4:{path to image}}}
		\\caption{~}
		\\label{subfig:${5}}
	\\end{subfigure}
	\\caption{%
			\\textit{%
			${6}
			}
	\\label{fig:${7}}
	}
\\end{figure}
endsnippet
snippet addsubfig
	\\begin{subfigure}[b]{${1:{VISUAL}}\textwidth}
		\\centering
		\\includegraphics[width=\textwidth]{${0:{path to image}}}
		\\caption{~}
